@model TQMallWeb.Models.Brand

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <div class="card my-4">
        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
            <div class="bg-gradient-info shadow-primary border-radius-lg pt-4 pb-3">
                <h6 class="text-white text-capitalize ps-3">Update hãng</h6>
            </div>
        </div>
        <b class="alert-danger">@ViewBag.Noti</b>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-2">Tên loại</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new
                        {
                            htmlAttributes = new
                   {
                       @type = "text",
                       @class = "form-control"
                   }
                        })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Link ảnh</label>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Image, new
                        {
                            htmlAttributes = new
                   {
                       @type = "text",
                       @class = "form-control"
                   }
                        })
                        @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        <img src="@Model.Image" height="150" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Trạng thái</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">

                    <div class="col-md-offset-2 col-md-10">
                        <a href="@Url.Action("Index","Brand")" class="btn btn-warning">Trở về</a>
                        <input type="submit" value="Cập nhật" class="btn btn-info" />
                    </div>
                </div>
            </div>
        }
    </div>

</body>
</html>
