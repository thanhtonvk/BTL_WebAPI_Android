<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/image_product"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_test" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/image_product"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#CCFDD835"
            app:cardCornerRadius="50dp">

            <TextView
                android:id="@+id/tv_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="-60%"
                android:textColor="#E53935"
                android:textSize="10sp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_cost_real"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_cost_sale"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/image_product"
            android:gravity="center"
            android:text="đ 12.000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_cost_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image_product"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/image_product"
            android:gravity="center"
            android:text="đ 12.000"
            android:textColor="#F57F17"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/image_product"
            android:text="Toon"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </RelativeLayout>


</LinearLayout>