<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.LoginFragment.RegisterFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/reactangle_1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:background="@drawable/reactangle_2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/reactangle_3" />

    <TextView
        android:id="@+id/login"
        android:layout_width="338dp"
        android:layout_height="67dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="290dp"
        android:gravity="top"
        android:text="Đăng ký tài khoản"
        android:textColor="@color/primary"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/email"
        android:layout_width="338dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="340dp"
        android:gravity="top"
        android:text="Tài khoản"
        android:textAppearance="@style/email" />

    <EditText
        android:id="@+id/edt_username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/email"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/border_edittext"
        android:hint="Tài khoản"
        android:paddingLeft="10dp"
        android:textColorHint="#4D42A5F5" />

    <TextView
        android:id="@+id/pass"
        android:layout_width="338dp"
        android:layout_height="20dp"
        android:layout_below="@id/edt_username"
        android:layout_marginLeft="25dp"
        android:gravity="top"
        android:text="Mật khẩu"
        android:textAppearance="@style/email" />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/pass"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/border_edittext"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColorHint="#4D42A5F5" />

    <TextView
        android:id="@+id/name"
        android:layout_width="338dp"
        android:layout_height="20dp"
        android:layout_below="@id/edt_password"
        android:layout_marginLeft="25dp"
        android:gravity="top"
        android:text="Họ tên"
        android:textAppearance="@style/email" />

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/name"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/border_edittext"
        android:hint="Họ tên"
        android:paddingLeft="10dp"
        android:textColorHint="#4D42A5F5" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="338dp"
        android:layout_height="20dp"
        android:layout_below="@id/edt_name"
        android:layout_marginLeft="25dp"
        android:gravity="top"
        android:text="Số điện thoại"
        android:textAppearance="@style/email" />

    <EditText
        android:id="@+id/edt_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/phone"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/border_edittext"
        android:hint="Số điện thoại"
        android:inputType="phone"
        android:paddingLeft="10dp"
        android:textColorHint="#4D42A5F5" />

    <View
        android:layout_width="167dp"
        android:layout_height="60dp"
        android:layout_below="@id/edt_phone"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/logo_auth" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectangle_white"
        android:gravity="center"
        android:text="Đăng ký tài khoản"
        android:textColor="@color/white" />

</RelativeLayout>