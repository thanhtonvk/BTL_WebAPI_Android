<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StartActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <!-- Oval -->
        <View
            android:id="@+id/oval1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="150dp"
            android:layout_marginRight="-100dp"
            android:background="@drawable/oval"
            android:backgroundTint="#42A5F5" />


        <!-- Oval -->
        <View
            android:id="@+id/oval2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
           android:layout_marginTop="200dp"
            android:layout_marginLeft="-100dp"
            android:alpha="0.4"
            android:background="@drawable/oval"
            android:backgroundTint="@color/primary" />

        <!-- beoplay-a9-4-gen-hero-black -->
        <View
            android:id="@+id/beoplay_a9_"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:background="@drawable/oval"
            android:backgroundTint="@color/primary" />
        <TextView
            android:fontFamily="cursive"
            android:textSize="40dp"
            android:textStyle="bold|italic"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TQMall"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:drawableRight="@drawable/ic_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Chào mừng tới TQMall!"
            android:textColor="@color/primary"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:textColor="@color/primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Việc khó đã có Quang lo" />

        <TextView
            android:textColor="@color/primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Mang cả thế giới đến tận giường của bạn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_go"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:background="@drawable/button_primary"
                android:drawableRight="@drawable/ic_arrow_right"
                android:paddingLeft="24dp"
                android:text="Triển nào"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>